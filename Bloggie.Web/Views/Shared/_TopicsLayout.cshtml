@using Bloggie.Web.Repositories
@using System.Threading
@inject ITopicRepository topicRepository

@{
    Layout = "_Layout";

}

@{
    // Topic listesini veritabanından çek
    var topics = await topicRepository.GetAllAsync();
    string currentCulture = Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName;
}

<div class="d-flex flex-column min-vh-100">
    <div class="d-flex flex-grow-1">
        <!-- Sidebar -->
        <partial name="_SidebarPartialView" />


        <!-- Main Content Area -->
        <div class="flex-grow-1 d-flex flex-column bg-secondary bg-opacity-10">
            <!-- Bu kısımda asıl sayfa içeriği RenderBody ile gelecek -->
            <main class="content flex-grow-1 p-4">
                @RenderBody()
            </main>
        </div>
    </div>
</div>



@section Scripts {
    @RenderSection("Scripts", required: false)
}
