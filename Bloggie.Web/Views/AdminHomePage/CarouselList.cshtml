@model IEnumerable<Bloggie.Web.Models.Domain.HomePageCarouselImage>

<div class="container mt-3">
    <h2>@Resource.CarouselImages - @Resource.Admin</h2>
    
    <div class="container d-flex justify-content-end pe-4">
        <a class="btn btn-primary" asp-action="CarouselAdd">@Resource.AddNewImages</a>
    </div>
    
    <table class="table">
        <thead>
            <tr>
                <th>@Resource.DisplayOrder</th>
                <th>@Resource.Preview</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.DisplayOrder</td>
                    <td>
                        <img src="@item.ImageUrl" width="100" />
                    </td>
                    <td>
                        <a class="btn btn-primary"
                           asp-action="CarouselEdit"
                           asp-route-id="@item.Id">
                            @Resource.Edit
                        </a>
                        <form asp-action="CarouselDelete"
                              asp-route-id="@item.Id"
                              method="post"
                              style="display:inline;"
                              onsubmit="return confirm('Are you sure?');">
                            <button class="btn btn-danger" type="submit">@Resource.Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
